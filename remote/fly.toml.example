app = "{{APP_NAME}}"
primary_region = "{{REGION}}"

[build]
  dockerfile = "remote/Dockerfile"

[env]
  FLY_APP_NAME = "{{APP_NAME}}"
  NODE_OPTIONS = "--max-old-space-size=4096"

[mounts]
  source = "clawd_data"
  destination = "/data"
  initial_size = "10gb"

[[vm]]
  size = "shared-cpu-4x"
  memory = "8gb"

[[restart]]
  policy = "always"
  max_retries = 5
