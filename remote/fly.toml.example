app = "{{APP_NAME}}"
primary_region = "{{REGION}}"

[build]
  dockerfile = "remote/Dockerfile"

[env]
  FLY_APP_NAME = "{{APP_NAME}}"
  NODE_OPTIONS = "--max-old-space-size=2048"

[mounts]
  source = "clawd_data"
  destination = "/data"
  initial_size = "3gb"

[[vm]]
  size = "shared-cpu-2x"
  memory = "4gb"

[[restart]]
  policy = "always"
  max_retries = 5
